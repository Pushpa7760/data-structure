#include <stdio.h>
#include <stdlib.h>

int main() {
    int R, C;
    printf("Enter number of rows and columns: ");
    scanf("%d %d", &R, &C);
    int **mat = (int **)malloc(R * sizeof(int *));
    if (!mat) {
        printf("Memory allocation failed for rows!\n");
        return 1;
    }
    for (int i = 0; i < R; i++) {
        mat[i] = (int *)malloc(C * sizeof(int));
        if (!mat[i]) {
            printf("Memory allocation failed for row %d!\n", i);
            for (int k = 0; k < i; k++)
                free(mat[k]);
            free(mat);
            return 1;
        }
    }
    printf("Enter %d elements:\n", R * C);
    for (int i = 0; i < R; i++) {
        for (int j = 0; j < C; j++) {
            scanf("%d", &mat[i][j]);
        }
    }
    printf("\nOriginal matrix:\n");
    for (int i = 0; i < R; i++) {
        for (int j = 0; j < C; j++) {
            printf("%d ", mat[i][j]);
        }
        printf("\n");
    }
    int **trans = (int **)malloc(C * sizeof(int *));
    for (int i = 0; i < C; i++) {
        trans[i] = (int *)malloc(R * sizeof(int));
    }
    for (int i = 0; i < R; i++) {
        for (int j = 0; j < C; j++) {
            trans[j][i] = mat[i][j];
        }
    }
    printf("\nTranspose matrix:\n");
    for (int i = 0; i < C; i++) {
        for (int j = 0; j < R; j++) {
            printf("%d ", trans[i][j]);
        }
        printf("\n");
    }
    for (int i = 0; i < R; i++)
        free(mat[i]);
    free(mat);

    for (int i = 0; i < C; i++)
        free(trans[i]);
    free(trans);

    return 0;
}
